<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- Middle Section -->
        <RelativeLayout
            android:id="@+id/layout_centre_profile_relLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_centre_profile_relLayout1"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/layout_centre_profile_linLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_weight="25">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/layout_centre_profile_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        app:civ_border_color="@color/black"
                        app:civ_border_width="0.5dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="75">

                    <include layout="@layout/snippet_profile_user_details" />

                </RelativeLayout>

            </LinearLayout>

            <!-- Profile Description -->
            <LinearLayout
                android:id="@+id/layout_centre_profile_linLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_centre_profile_linLayout1"
                android:background="@drawable/grey_border_bottom"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/layout_centre_profile_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I am a fashionista"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_centre_profile_relLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/layout_centre_profile_linLayout2">

                <!-- Outfit posts RV -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/profile_outfit_RV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</merge>